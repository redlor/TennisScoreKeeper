<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">#283593</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">#283593</item>
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>
    <style name="title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
        <item name="android:textColor">@color/textColor</item>
    </style>
    <style name="relative_layout_set_point">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

    </style>
    <style name="card">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <style name="card_big_score">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <style name="edit_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="android:background">@color/editBackgroundColor</item>
        <item name="android:textSize">@dimen/textSizeMedium</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textColorHint">@color/tieBreakColor</item>
        <item name="android:hint">@string/hint_enter_name</item>
    </style>

    <style name="button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/buttonshape</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/textSizeMedium</item>
    </style>

    <style name="playerText">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/textSizeMedium</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">textCapSentences</item>
    </style>
    <style name="ballImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@drawable/tennisbal</item>
        <item name="android:scaleX">0.7</item>
        <item name="android:scaleY">0.7</item>
    </style>
    <style name="SetScoreText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:text">@string/score</item>
        <item name="android:textColor">@color/textColorScore</item>
        <item name="android:textSize">@dimen/textSizeMedium</item>
    </style>
    <style name="tieScoreText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textSizeSmall</item>
        <item name="android:text">@string/score</item>
        <item name="android:textColor">@color/tieBreakColor</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="GameScoreText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:text">@string/score</item>
        <item name="android:textSize">@dimen/textSizeScore</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="AdvText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/textColorAdv</item>
        <item name="android:textSize">@dimen/textSizeScore</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:padding">@dimen/smallPadding</item>
        <item name="android:textColor">@color/textColorScore</item>
        <item name="android:textSize">@dimen/textSizeMedium</item>
    </style>

    <style name="square_button">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textColor">#64FFDA</item>
    </style>

    <style name="resetButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/textSizeForButton</item>
        <item name="android:textColor">#64FFDA</item>
    </style>

    <style name="SetNumberText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:text">center</item>
        <item name="android:layout_marginLeft">@dimen/sideMargin</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:padding">@dimen/smallPadding</item>
        <item name="android:textColor">@color/textColorScore</item>
        <item name="android:textSize">@dimen/textSizeMedium</item>
    </style>

    <style name="PlText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:padding">@dimen/smallPadding</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/textSizeMedium</item>
    </style>

    <style name="invisible_textview">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
    </style>

</resources>
